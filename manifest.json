{
  "manifest_version": 3,
  "name": "Zenn Markdown Cheatsheet",
  "version": "1.0.0",
  "description": "Zennの編集ページにMarkdown記法のチートシートを表示します。",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://zenn.dev/*"],
      "js": ["src/cheatsheet.js"]
    }
  ],
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  }
}
